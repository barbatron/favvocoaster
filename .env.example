# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# Scraping Configuration
# Minimum number of artists on a track to trigger scraping (default: 2)
# Set to 2 to only scrape collaborations
SCRAPE_MIN_ARTISTS=2

# Number of top tracks to fetch per artist (default: 1)
SCRAPE_TOP_TRACKS_LIMIT=1

# Whether to skip scraping if any artist is already known (default: true)
SCRAPE_SKIP_KNOWN_ARTISTS=true

# How often to check for new liked songs in seconds (default: 30)
SCRAPE_POLL_INTERVAL_SECONDS=30

# How many liked songs to scan when building the "known artists" index (default: 500)
SCRAPE_KNOWN_ARTISTS_SCAN_LIMIT=500

# Debug mode (default: false)
DEBUG=false
